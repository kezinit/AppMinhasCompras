<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMinhasCompras.View.PaginaPrincipal">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" Margin="10, 50" Padding="10,20">
            <Label Text="MINHAS COMPRAS"
                   HorizontalOptions="Center"
                   FontSize="30"
                   FontAttributes="Bold"
                   TextColor="Black"
                   Margin="20,0"/>
            <Label Text="Organize suas compras, para uma compra mais organizada e focada na economia do seu dinheiro"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   FontSize="12"
                   FontAttributes="Bold"
                   TextColor="Black"
                   Margin="0,20"/>
            <Button Text="Entrar No APP" 
                    Scale="1"
                    FontAttributes="Bold"
                    BackgroundColor="#5f1e9c"
                    TextColor="white"
                    Clicked="Button_Clicked_1"/>
            <Button Text="sair" 
                    Scale="1"
                    FontAttributes="Bold"
                    BackgroundColor="White"
                    Clicked="Button_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>